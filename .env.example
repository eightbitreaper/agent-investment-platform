# Agent Investment Platform - Environment Configuration Template
# Copy this file to .env and configure with your actual values

# =============================================================================
# LLM Configuration
# =============================================================================

# OpenAI Configuration (Optional - for cloud LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Claude Configuration (Optional - for cloud LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local LLM Configuration (Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=300

# =============================================================================
# Data Sources Configuration
# =============================================================================

# Financial Data APIs
POLYGON_API_KEY=your_polygon_key_here
FINNHUB_API_KEY=your_finnhub_key_here
TWELVE_DATA_API_KEY=your_twelve_data_key_here

# News and Social Media APIs
NEWS_API_KEY=your_news_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# YouTube Data API (for transcript analysis)
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# Database and Storage Configuration
# =============================================================================

# Database URL (SQLite for local, PostgreSQL for production)
DATABASE_URL=sqlite:///./data/investment_platform.db
# DATABASE_URL=postgresql://username:password@localhost:5432/investment_platform

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# File Storage
DATA_DIRECTORY=./data
REPORTS_DIRECTORY=./reports
LOGS_DIRECTORY=./logs
MODELS_DIRECTORY=./models

# =============================================================================
# GitHub Integration Configuration
# =============================================================================

# GitHub Configuration (for report publishing)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=username/repository-name
GITHUB_BRANCH=main

# =============================================================================
# MCP Server Configuration
# =============================================================================

# MCP Server Ports
MCP_STOCK_SERVER_PORT=3001
MCP_NEWS_SERVER_PORT=3002
MCP_YOUTUBE_SERVER_PORT=3003
MCP_ANALYSIS_SERVER_PORT=3004

# MCP Authentication
MCP_AUTH_TOKEN=your_mcp_auth_token_here

# =============================================================================
# Application Configuration
# =============================================================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Analysis Configuration
DEFAULT_ANALYSIS_PERIOD=30d
MAX_CONCURRENT_ANALYSIS=5
ANALYSIS_REFRESH_INTERVAL=3600

# Report Generation
REPORT_FORMAT=markdown
REPORT_AUTO_PUBLISH=false
REPORT_INCLUDE_CHARTS=true

# Notification Configuration
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=your_email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password_here

# =============================================================================
# Security Configuration
# =============================================================================

# Application Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_TIMEOUT=3600

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# =============================================================================
# Development and Testing Configuration
# =============================================================================

# Development Settings
DEVELOPMENT_MODE=true
AUTO_RELOAD=true
PROFILING_ENABLED=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./data/test_investment_platform.db
TEST_DATA_DIRECTORY=./test_data
RUN_INTEGRATION_TESTS=false

# Mock Services (for testing without external APIs)
USE_MOCK_APIS=false
MOCK_DATA_SEED=12345
