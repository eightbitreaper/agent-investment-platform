{
  "index_patterns": [
    "platform-logs-*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "5s"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "level": {
          "type": "keyword"
        },
        "logger_name": {
          "type": "keyword"
        },
        "message": {
          "type": "text"
        },
        "module": {
          "type": "keyword"
        },
        "function": {
          "type": "keyword"
        },
        "component": {
          "type": "keyword"
        },
        "trace_id": {
          "type": "keyword"
        },
        "span_id": {
          "type": "keyword"
        },
        "duration_ms": {
          "type": "float"
        },
        "hostname": {
          "type": "keyword"
        },
        "process_id": {
          "type": "integer"
        },
        "thread_id": {
          "type": "integer"
        }
      }
    }
  }
}