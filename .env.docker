# Agent Investment Platform - Docker Environment Configuration
# This file contains Docker-specific environment variables

# =============================================================================
# Docker Compose Configuration
# =============================================================================

# Project name for Docker Compose
COMPOSE_PROJECT_NAME=agent-investment-platform

# Build settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL
POSTGRES_DB=investment_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=investment_platform_secure_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_2024

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_PASSWORD=grafana_admin_2024

# Prometheus
PROMETHEUS_RETENTION=15d

# =============================================================================
# Security Configuration
# =============================================================================

# JWT and session secrets (change these in production!)
JWT_SECRET=your_jwt_secret_change_in_production
SESSION_SECRET=your_session_secret_change_in_production

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# Resource Limits
# =============================================================================

# Memory limits (in MB)
APP_MEMORY_LIMIT=2048
POSTGRES_MEMORY_LIMIT=1024
REDIS_MEMORY_LIMIT=512

# CPU limits
APP_CPU_LIMIT=2
POSTGRES_CPU_LIMIT=1
REDIS_CPU_LIMIT=0.5
